<% if @city != nil && @aqi != nil %>
  <p>Current results for <b><%= @city %></b></p>
  <hr>
  <fieldset>
    <legend>Current AQI</legend>
    <h2><%= @aqi %></h2>
  </fieldset>
  <fieldset>
    <legend>Threshold</legend>
    <h2><%= @threshold %></h2>
  </fieldset>
  <br />
  <% if @aqi > @threshold %>
    <p style="color: red">ğŸ‘ Warning: AQI is higher than your set threshold</p>
  <% elsif @aqi < @threshold %>
    <p style="color: green">ğŸ‘ All Good: AQI is lower than your set threshold</p>
  <% end %>
<% end %>
<hr>
<%= form_with url: dashboard_update_path, method: :post do |form| %>
  <div class="field">
    <%= form.label :city %>
    <%= form.text_field :city %>
  </div>
  <div class="field">
    <%= form.label :aqi_threshold, 'AQI Threshold' %>
    <%= form.number_field :aqi_threshold %>
  </div>
  <%= form.submit "Update âœ…" %>
<% end %>
